<resources>
    <style name="DefaultExplainingPermissionsTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/brandYellowLight</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/brandSecondary</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:navigationBarColor">@color/brandSecondary</item>
        <item name="android:colorPrimary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:colorPrimaryDark">@android:color/white</item>
        <!--<item name="colorControlActivated">@android:color/white</item>-->
        <item name="colorControlActivated">@color/blue</item>
        <item name="android:textCursorDrawable">@null</item>
        <!--<item name="android:colorAccent">@android:color/white</item>-->
        <item name="android:colorAccent">@color/yelow</item>


        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="android:colorControlNormal">@color/brandSecondary</item>
    </style>
    <style name="SpinnerItem" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">AvenirLTStd_black</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/brandSecondary</item>
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="SpinnerDropDownItem" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">avenir-black</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/brandSecondary</item>
        <item name="android:background">@android:color/white</item>
    </style>
</resources>
